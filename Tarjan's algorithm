int timer = 0;
vector<int> tin, low;
vector<pair<int,int>> bridges;

void dfs(int u, int p, vector<vector<int>>& adj, vector<bool>& vis) {
    vis[u] = true;
    tin[u] = low[u] = timer++;
    for (int v : adj[u]) {
        if (v == p) continue;
        if (vis[v]) {
            low[u] = min(low[u], tin[v]);
        } else {
            dfs(v, u, adj, vis);
            low[u] = min(low[u], low[v]);
            if (low[v] > tin[u]) bridges.push_back({u, v});
        }
    }
}
